<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorBlueBeautiful</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/greyBeautiful</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowAnimationStyle">@style/activityAnimation</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="colorPrimaryDark">@color/colorBULEMORE</item>
    </style>

    <style name="activityAnimation" parent="@android:style/Animation">
        <item name="android:activityOpenEnterAnimation">@anim/right_in</item>
        <item name="android:activityOpenExitAnimation">@anim/left_out</item>
        <item name="android:activityCloseEnterAnimation">@anim/left_in</item>
        <item name="android:activityCloseExitAnimation">@anim/right_out</item>
    </style>
    <style name="AppThemeFull" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorBlueBeautiful</item>
        <item name="colorPrimaryDark">@color/colorBULEMORE</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:fitsSystemWindows">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:windowBackground">@color/greyBeautiful</item>
    </style>

    <style name="AppThemeTransport" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/colorBlueBeautiful</item>
        <item name="android:windowBackground">@color/greyBeautiful</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>
</resources>