<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModifyBookActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:layout_alignParentTop="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:background="?attr/colorPrimary">
        <TextView
            android:id="@+id/toolbar_title_modifyBook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="修改书籍"
            android:textColor="#ffffff"
            android:textSize="18sp"/>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_above="@+id/bottombar">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <ImageView
                android:id="@+id/bookpic_modifyBook"
                android:layout_width="200dp"
                android:layout_height="247dp"
                android:layout_marginTop="30dp"
                android:src="@drawable/icon_add"
                android:scaleType="fitCenter"/>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="25dp"
                app:cardCornerRadius="4dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:id="@+id/bookid_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="书籍编号："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/bookid_text_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bookName_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="书名："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/bookName_text_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bookAuthor_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_vertical"
                            android:layout_marginEnd="10dp"
                            android:text="著者："
                            android:textColor="@android:color/black"
                            android:textSize="16sp" />
                        <TextView
                            android:id="@+id/bookAuthor_text_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textSize="16sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bookPublish_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出版社："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>

                        <TextView
                            android:id="@+id/bookPublish_text_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/publishTime_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="出版时间："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/publishTimeSelector_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:singleLine="true"
                            android:textSize="16sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <RelativeLayout
                        android:id="@+id/bookNumber_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp">
                        <TextView
                            android:id="@+id/bookNumber_tip_modifyBook"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="库存："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"/>
                        <RelativeLayout
                            android:id="@+id/bookNumber_button1_modifyBook"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_marginStart="10dp"
                            android:layout_toEndOf="@+id/bookNumber_tip_modifyBook">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/reduce"/>
                        </RelativeLayout>
                        <TextView
                            android:id="@+id/bookNumber_edit_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textSize="18sp"
                            android:layout_toEndOf="@+id/bookNumber_button1_modifyBook"
                            android:layout_toStartOf="@+id/bookNumber_button2_modifyBook"
                            android:gravity="center_vertical|center_horizontal"/>
                        <RelativeLayout
                            android:id="@+id/bookNumber_button2_modifyBook"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:layout_alignParentEnd="true"
                            android:layout_centerInParent="true"
                            android:layout_marginEnd="10dp">
                            <ImageView
                                android:layout_width="30dp"
                                android:layout_height="match_parent"
                                android:src="@drawable/plus"
                                android:layout_centerInParent="true"/>
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:id="@+id/bookPage_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="页数："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/bookPage_edit_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:gravity="center_vertical"
                            android:textSize="18sp" />
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bookPlace_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="馆藏地址："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>
                        <Spinner
                            android:id="@+id/spinner_bookPlace_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/type_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="书籍类型："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="center_vertical"/>
                        <TextView
                            android:id="@+id/spinner_type_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="45dp"
                            android:textSize="18sp"
                            android:gravity="center_vertical"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/bookIntroduction_modifyBook"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="3dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center_vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="简介："
                            android:textColor="@android:color/black"
                            android:textSize="16sp"
                            android:layout_marginEnd="10dp"
                            android:layout_gravity="top"/>
                        <TextView
                            android:id="@+id/bookIntroduction_text_modifyBook"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:minHeight="45dp"
                            android:textSize="16sp"/>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>
    <LinearLayout
        android:id="@+id/bottombar"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:background="@android:color/white"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <LinearLayout
            android:id="@+id/modifyBook_modifyBook"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_corner3">
            <TextView
                android:id="@+id/modifyBook_modifyBook_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="修改书籍"
                android:textColor="#ffffff"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/delete_modifyBook"
            android:layout_width="0dp"
            android:layout_weight="30"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/shape_corner4">
            <TextView
                android:id="@+id/delete_modifyBook_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除书籍"
                android:textColor="#ffffff"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>